<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/item_checklist_new_add"
        android:layout_width="@dimen/icon_size_medium"
        android:layout_height="@dimen/icon_size_medium"
        android:layout_marginStart="@dimen/item_checklist_new_add_start_margin"
        android:layout_marginLeft="@dimen/item_checklist_new_add_start_margin"
        android:src="@drawable/ic_add"
        tools:tint="@color/cl_image_tint_variant_light" />

    <TextView
        android:id="@+id/item_checklist_new_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:maxLines="@integer/item_checklist_new_text_max_lines"
        android:paddingTop="@dimen/spacing_small_medium"
        android:paddingBottom="@dimen/spacing_small_medium"
        tools:text="@string/item_checklist_new_text"
        tools:textColor="@color/cl_text_checklist_item_new_text_light" />

</LinearLayout>